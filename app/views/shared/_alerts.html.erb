<%= js extend_gritter position: :bottom_right %>
<% if flash[:alert] %>
	<%= js add_gritter(flash[:alert], title: "Notification", time: 2000) %>
<% elsif flash[:error] %>
	<%= js add_gritter(flash[:error], title: "Notification", time: 2000) %>
<% elsif flash[:notice] %>
	<%= js add_gritter(flash[:notice], title: "Notification", time: 2000) %>
<% end %>