<div class="container">
	<div class="row border py-3">
			<div class=" col-md-6">
			  <%= image_tag @post.image.to_s, width:"100%" %>
				<% pre_like = @post.likes.find { |like| like.user_id == current_user.id} %>
			  	<% if pre_like %>
				  <%= button_to 'Unlike', post_like_path(@post, pre_like), method: :delete %>
				<% else %>
				  <%= button_to 'Like', post_likes_path(@post), method: :post %>
				<% end %>
			  <%= pluralize(@post.likes.count, 'Like') %>
			</div>
			<div class="col-md-6">
			  	<h5 ><%= @post.user.username %></h5>
			    <p ><%= @post.description %></p>
			    <%= render 'comments/comment_form', post: @post %>
			    <%= render @comments %>
			    <%= button_to 'Edit Post', edit_post_path(@post), method: :get, class: 'btn btn-warning' %>
			    <%= button_to 'Delete Post', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
			</div>
	</div>
</div>