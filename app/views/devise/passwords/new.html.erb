<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-signin' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "sr-only" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email"  %>
  </div>

  <div class="actions">
    <%= f.submit "Send reset instructions", class: "btn btn-lg btn-info btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
