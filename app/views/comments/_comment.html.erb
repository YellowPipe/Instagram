<div class="container my-3">
<div class="row">
	<div class="col-md-2">
		<%= gravatar_for comment.user, size: 40 %>
	</div>
	<div class="col-md-19 pl-0 mt-2">
		<p><strong><%= comment.user.username %></strong>: <%= comment.body %></p>
	</div>
	<div class="col-md-1">
		<%= delete_comment(comment) %>
	</div>
</div>
</div>
<hr>