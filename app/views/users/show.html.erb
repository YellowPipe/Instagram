 <section class="jumbotron text-center">
    <div class="container">
    	<div class="row">
    		<div class="col-md-3">
    			<%= gravatar_for(@user) %>
    		</div>
    		<div class="col-md-9">
    			<div class="row">
    				<div class="col-md-6">
	    				<h1 class="jumbotron-heading"><%= @user.username %></h1>
	    			</div> 
	    			<div class="col-md-6">
	    				<%= link_to 'Edit profile', edit_user_registration_path, class: "btn btn-outline-secondary my-2" if @user == current_user %>
    				</div>

    			</div>
			    <div class="row my-3">
			    	<div class="col-md-4">
			    		<p><%= pluralize(@user.posts.count, 'publication') %></p>
			    	</div>
			    	<div class="col-md-4">
			    		<p><%= @user.following.count %> following</p>
			    	</div>
			    	<div class="col-md-4">
			    		  <a href="<%= followers_user_path(@user) %>">
						    <strong id="followers">
						      <%= pluralize(@user.followers.count, 'follower') %>
						    </strong>
						  </a>
			    	</div>
			    </div>
			    <div class="row">
			    	<div class="col-md-12">
			    		<%= render 'follow_form' %>
			    	</div>
			    </div> 
		  	</div>
  		</div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">
    	<div class="row">
	    	<%= render partial: "post", collection: @posts, :as => :post %>
    	</div>
      </div>
    </div>