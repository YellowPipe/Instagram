 <section class="jumbotron text-center">
    <div class="container">
    	<div class="row">
    		<div class="col-md-3">
    			<img src="https://via.placeholder.com/100">
    		</div>
    		<div class="col-md-9">
    			<div class="row">
    				<div class="col-md-6">
	    				<h1 class="jumbotron-heading"><%= @user.username %></h1>
	    			</div>
	    			<div class="col-md-6">
	    				<a href="#" class="btn btn-secondary my-2">Edit profile</a>	
    				</div>

    			</div>
			    <div class="row">
			    	<div class="col-md-4">
			    		<p>4 publications</p>
			    	</div>
			    	<div class="col-md-4">
			    		<p>122 followers</p>
			    	</div>
			    	<div class="col-md-4">
			    		<p>12 following</p>
			    	</div>
			    </div>
			    <div class="row">
			    	<div class="col-md-12">
			    		<h3>My name</h3>
			    	</div>
			    </div> 
		  	</div>
  		</div>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">
    	<div class="row">
	    	<% @user.posts.each do |post| %>
		        <div class="col-md-4">
		          <div class="card mb-4 shadow-sm">
		            <img src="https://via.placeholder.com/225">
		            <div class="card-body">
		              <p class="card-text"><%= post.description if post.description %></p>
		              <div class="d-flex justify-content-between align-items-center">
		                <div class="btn-group">
		                  <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
		                  <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
		                </div>
		                <small class="text-muted">9 mins</small>
		              </div>
		            </div>
		          </div>
		        </div>
	        <% end %>
    	</div>
      </div>
    </div>