<div class="col-md-4">
  <div class="card mb-4 shadow-sm ">
  	<div class="pic">
	   	<%= image_tag post.image.to_s, width: '100%' %>
	    <%= link_to '', post, class: 'overlay' %>  
	</div>
	<div class="info container">
		<div class="row justify-content-center">
			<div class="col-md-4"><%= fa_icon("heart") %> <%= post.likes.count %></div>
			<div class="col-md-4"><%= fa_icon("comment") %> <%= post.comments.count %></div>
		</div>
	</div>
  </div>
</div>